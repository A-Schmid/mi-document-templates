% commands to create unnumbered sections that also appear in the table of contents
% based on KOMA-Script \addsec definitions by Markus Kohm
\let\usection\addsec
\newcommand\addsubsec{\SecDef\@addsubsec\@saddsubsec}
\newcommand*{\@addsubsec}{}
\def\@addsubsec[#1]#2{%
	\edef\reserved@a{%
		\unexpanded{%
			\subsection[{#1}]{#2}%
			\c@secnumdepth=
		}\the\c@secnumdepth\relax
	}%
	\c@secnumdepth=\numexpr \subsectionnumdepth-1\relax
	\reserved@a
}
\newcommand*{\@saddsubsec}[1]{%
	\subsection*{#1}\addsubsecmark{}%
}
\let\usubsection\addsubsec

\newcommand\addsubsubsec{\SecDef\@addsubsubsec\@saddsubsubsec}
\newcommand*{\@addsubsubsec}{}
\def\@addsubsubsec[#1]#2{%
	\edef\reserved@a{%
		\unexpanded{%
			\subsubsection[{#1}]{#2}%
			\c@secnumdepth=
		}\the\c@secnumdepth\relax
	}%
	\c@secnumdepth=\numexpr \subsubsectionnumdepth-1\relax
	\reserved@a
}
\newcommand*{\@saddsubsubsec}[1]{%
	\subsubsection*{#1}\addsubsubsecmark{}%
}
\let\usubsubsection\addsubsubsec

\newcommand{\img}[2]{
	\includegraphics[width=#2]{{images/#1}}
}


% create a image figure
% param 1: image file name (without extension)
% param 2: figure description
\newcommand{\image}[2]{
	\begin{figure}[ht]
		\centering
		\includegraphics[width=0.5\textwidth]{{images/#1}}
		\caption{#2}
		\label{fig:#1}
	\end{figure}
}

